# Set default behavior to automatically normalize line endings.
* text=auto

# Explicitly declare text files you want to always be normalized and converted
# to native line endings on checkout.

*.js text
*.jsx text
*.json text eol=lf
*.md text
*.css text
*.scss text
*.html text
*.htm text
*.xml text
*.yml text
*.yaml text
*.toml text
*.txt text
*.sql text
*.prisma text
*.env text
*.env.example text
*.gitignore text
*.gitattributes text

# Shell scripts should always have LF line endings
*.sh text eol=lf
*.bash text eol=lf
*.ts text  eol=lf
*.tsx text eol=lf
# Declare files that will always have CRLF line endings on checkout.
*.bat text eol=crlf
*.cmd text eol=crlf

# Denote all files that are truly binary and should not be modified.
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary
*.ez binary
*.bz2 binary
*.swp binary
*.image binary
*.tgz binary
*.jar binary
*.war binary
*.ear binary
*.sqlite binary
*.p12 binary
*.key binary
*.pem binary
*.crt binary
*.cer binary
*.der binary
*.pfx binary
*.p7b binary
*.p7c binary
*.jks binary
*.keystore binary
*.truststore binary

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.gitkeep export-ignore