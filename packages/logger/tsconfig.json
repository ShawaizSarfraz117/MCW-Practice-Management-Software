{
    "extends": "@mcw/tsconfig-config/react",
    "compilerOptions": {
      "tsBuildInfoFile": "./dist/.tsbuildinfo",
      "declaration": true,
      "declarationDir": "./dist",
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "dist"]
  }