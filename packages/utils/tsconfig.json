{
  "extends": "@mcw/tsconfig-config/react",
  "compilerOptions": {
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "declaration": true,
    "declarationDir": "./dist",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "__tests__/validation.test.ts"],
  "exclude": ["node_modules", "dist"]
}