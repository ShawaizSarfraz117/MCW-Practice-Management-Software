{
  "extends": "@mcw/tsconfig-config/next",
  "compilerOptions": {
    "jsx": "preserve",
    "paths": {
      "@/*": ["./src/app/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx"
  ],
  "exclude": ["node_modules", ".next"]
}
