{
  "extends": "@mcw/tsconfig-config/next",
  "compilerOptions": {
    "paths": {
      "@/*": ["./src/app/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/types/*": ["./src/types/*"]
    },
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    ".next/types/**/*.ts",
    "__tests__/**/*.ts",
    "__tests__/**/*.tsx",
    "../../packages/types/src/auditTypes.ts",
    "vitest.setup.ui.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
